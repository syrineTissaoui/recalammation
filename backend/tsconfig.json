{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "types": ["node"]

    /* IMPORTANT: ensure this is REMOVED or set to false:
       "verbatimModuleSyntax": false
    */
  },
  "include": ["src"]
}
